mixin input-checkbox({ labelText = '', labelDescription, inputStyle, addAttributes } = {})
  -
    const blockName = 'input-checkbox';
    const blockAttributes = {
      type: 'checkbox',
      class: `${blockName}__state`,
    };
    const wrapperClass = [blockName];

  if (inputStyle)
    each style in inputStyle.split(' ')
      - wrapperClass.push(`${blockName}_${style}`)

  label(class=wrapperClass) #{labelText}
    if (labelDescription)
      span(class=`${blockName}__description`) #{labelDescription}
    input&attributes(Object.assign({}, attributes, addAttributes, blockAttributes))
    span(class=`${blockName}__box`)
      span(class=`${blockName}__mark`)
