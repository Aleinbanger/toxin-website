block variables

block mixins
  include /blocks/header/header.pug
  include /blocks/footer/footer.pug

doctype html
html(lang="ru")

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description" content="The first practical task for MetaLamp Frontend education program")
    meta(name="keywords" content="MetaLamp, Frontend")
    meta(name="author" content="Aleinbanger")

    link(rel="apple-touch-icon" sizes="180x180" href="assets/favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="assets/favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="assets/favicons/favicon-16x16.png")
    link(rel="manifest" href="assets/favicons/site.webmanifest")
    link(rel="mask-icon" href="assets/favicons/safari-pinned-tab.svg" color="#603cba")
    link(rel="shortcut icon" href="assets/favicons/favicon.ico")
    meta(name="apple-mobile-web-app-title" content="Toxin")
    meta(name="application-name" content="Toxin")
    meta(name="msapplication-TileColor" content="#603cba")
    meta(name="msapplication-config" content="assets/favicons/browserconfig.xml")
    meta(name="theme-color" content="#ffffff")

    title #{pageTitle}

  body.layout

    block header
      +header({
        navbarList: [
          { text: 'О нас', href: '#mock-address' },
          { text: 'Услуги', dropdownList: [
            { text: 'Услуга 1', href: '#mock-address' },
            { text: 'Услуга 2', href: '#mock-address' },
            { text: 'Услуга 3', href: '#mock-address' }
          ] },
          { text: 'Вакансии', href: '#mock-address' },
          { text: 'Новости', href: '#mock-address' },
          { text: 'Соглашения', dropdownList: [
            { text: 'Соглашение 1', href: '#mock-address' },
            { text: 'Соглашение 2', href: '#mock-address' }
          ] },
        ],
        fstBtn: { text: 'Войти', href: './sign-in.html' },
        sndBtn: { text: 'Зарегистрироваться', href: './registration.html' },
        homeHref: './landing-page.html',
      })

    block content

    block footer
      .layout__footer
        +footer({
          mainText: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
          navbarItems: [
            { title: 'Навигация', list: [
              { text: 'О нас', href: '#mock-address' },
              { text: 'Новости', href: '#mock-address' },
              { text: 'Служба поддержки', href: '#mock-address' },
              { text: 'Услуги', href: '#mock-address' }
            ] },
            { title: 'О нас', list: [
              { text: 'О сервисе', href: '#mock-address' },
              { text: 'Наша команда', href: '#mock-address' },
              { text: 'Вакансии', href: '#mock-address' },
              { text: 'Инвесторы', href: '#mock-address' }
            ] },
            { title: 'Служба поддержки', list: [
              { text: 'Соглашения', href: '#mock-address' },
              { text: 'Сообщества', href: '#mock-address' },
              { text: 'Связь с нами', href: '#mock-address' }
            ] },
          ],
          subscription: {
            title: 'Подписка',
            text: 'Получайте специальные предложения и новости сервиса',
            href: '#mock-address',
          },
          copyrightText: 'Toxin отель. Все права защищены.',
          twitterHref: '#mock-address',
          facebookHref: '#mock-address',
          instagramHref: '#mock-address',
          homeHref: './landing-page.html',
        })
      .layout__footer.layout__footer_mobile
        +footer({
          style: 'creative',
          copyrightText: 'Toxin отель. Все права защищены.',
          twitterHref: '#mock-address',
          facebookHref: '#mock-address',
          instagramHref: '#mock-address',
          homeHref: './landing-page.html',
        })
