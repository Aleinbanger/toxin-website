extends ../_layout.pug

block append variables
  - const pageTitle = 'Form Elements'

block append mixins
  include /blocks/input-field/input-field.pug
  include /blocks/input-toggle/input-toggle.pug
  include /blocks/subscription/subscription.pug
  include /blocks/button/button.pug
  include /blocks/button-like/button-like.pug
  include /blocks/rating/rating.pug
  include /blocks/comment/comment.pug
  include /blocks/list-bullet/list-bullet.pug
  include /blocks/list-feature/list-feature.pug
  include /blocks/list-checkbox/list-checkbox.pug
  include /blocks/list-radio/list-radio.pug
  include /blocks/pagination/pagination.pug
  include /blocks/dropdown-list/dropdown-list.pug
  include /blocks/dropdown-date/dropdown-date.pug
  include /blocks/slider-range/slider-range.pug

block content
  .form-elements.js-form-elements
    .form-elements__column
      .form-elements__item
        .form-elements__text-field
          +input-field({inputType: 'email', labelText: 'Text field'})
        .form-elements__text-field
          +input-field({labelText: 'Text field'})(value='This is pretty awesome')
        .form-elements__text-field
          +dropdown-list({
            withButtons: true,
            labelText: 'Dropdown',
            inputPlaceholder: 'Сколько гостей',
            inputName: 'guests',
            listItems: [
              {combined: true, title: 'взрослые', names: ['гость', 'гостя', 'гостей'], value: 0, minValue: 0, maxValue: 10},
              {combined: true, title: 'дети', names: ['гость', 'гостя', 'гостей'], value: 0, minValue: 0, maxValue: 10},
              {title: 'младенцы', names: ['младенец', 'младенца', 'младенцев'], value: 0, minValue: 0, maxValue: 10}
            ],
          })
        .form-elements__text-field.form-elements__text-field_masked.js-form-elements__text-field_masked
          +input-field({inputType: 'mask-date', labelText: 'Masked Text Field'})

      .form-elements__item
        .form-elements__text-field
          .form-elements__dropdown-date.js-form-elements__dropdown-date
            +dropdown-date({
              labelTexts: ['Date Dropdown'],
              inputNames: ['date-arrival', 'date-departure'],
            })

      .form-elements__item
        .form-elements__text-field
          .form-elements__dropdown-date.js-form-elements__dropdown-date
            +dropdown-date({
              labelTexts: ['Filter Date Dropdown'],
              inputNames: ['date-range'],
              startAt: '2019, 8, 19',
              endAt: '2019, 8, 23',
            })

      .form-elements__item
        .form-elements__subscription
          +subscription({labelText: 'Subscription Text Field'})

    .form-elements__column.form-elements__column_shift_right
      .form-elements__checkbox-list
        +list-checkbox({
          listTitle: 'Checkbox Buttons',
          listItems: [
            {labelText: 'Можно курить'},
            {labelText: 'Можно с питомцами', addAttributes: {checked: true, name: 'test'}},
            {labelText: 'Можно пригласить гостей (до 10 человек)', addAttributes: {checked: true}}
          ]
        })

      .form-elements__item
        +list-radio({
          radioName: 'sex',
          listTitle: 'Radio Buttons',
          listItems: [
            {labelText: 'Мужчина', addAttributes: {checked: true}},
            {labelText: 'Женщина'}
          ]
        })

      .form-elements__toggle-group
        h3.form-elements__title Toggle
        .form-elements__toggle
          +input-toggle({labelText: 'Получать спецпредложения'})(checked)
        .form-elements__toggle
          +input-toggle({labelText: 'Получать спецпредложения'})

      .form-elements__item
        h3.form-elements__title Like Button
        .form-elements__like-button.js-form-elements__like-button
          +button-like({likeCount: 2})
        .form-elements__like-button.js-form-elements__like-button
          +button-like({likeCount: 12, active: true})

      .form-elements__item
        h3.form-elements__title Rate Button
        .form-elements__rate-button.js-form-elements__rate-button
          +rating({value: 4})
        .form-elements__rate-button.js-form-elements__rate-button
          +rating({value: 5})

    .form-elements__column
      .form-elements__slider
        +slider-range({
          labelText: 'Range Slider',
          inputName: 'price-range',
          minValue: 600,
          maxValue: 15200,
          startAt: 5000,
          endAt: 10000,
        })

      .form-elements__item
        h3.form-elements__title Buttons
        .form-elements__button.form-elements__button_size_small
          +button({buttonText: 'Click me'})
        .form-elements__button.form-elements__button_size_small
          +button({buttonText: 'Click me', buttonStyle: 'ghost'})
        .form-elements__button.form-elements__button_display_inline
          +button({buttonText: 'Click me', buttonStyle: 'text'})
        .form-elements__button.form-elements__button_display_inline
          +button({buttonText: 'Click me', buttonStyle: 'text-faint'})
        .form-elements__button
          +button({buttonText: 'Перейти к оплате', withArrow: true})

      .form-elements__item
        h3.form-elements__title Pagination
        .form-elements__pagination.js-form-elements__pagination
          +pagination({itemsNumber: 180, itemsPerPage: 12, addDescription: 'вариантов аренды'})

    .form-elements__column
      .form-elements__item
        .form-elements__text-field
          +dropdown-list({
            labelText: 'Dropdown',
            inputPlaceholder: 'Какие удобства',
            inputName: 'features',
            listItems: [
              {title: 'спальни', names: ['спальня', 'спальни', 'спален'], value: 2, minValue: 0, maxValue: 3},
              {title: 'кровати', names: ['кровать', 'кровати', 'кроватей'], value: 2, minValue: 0, maxValue: 6},
              {title: 'ванные комнаты', names: ['ванная комната', 'ванные комнаты', 'ванных комнат'], value: 0, minValue: 0, maxValue: 2}
            ]
          })
        .form-elements__text-field
          +dropdown-list({
            labelText: 'Dropdown',
            inputPlaceholder: 'Какие удобства',
            inputName: 'features',
            listItems: [
              {title: 'спальни', names: ['спальня', 'спальни', 'спален'], value: 2, minValue: 0, maxValue: 3},
              {title: 'кровати', names: ['кровать', 'кровати', 'кроватей'], value: 2, minValue: 0, maxValue: 6},
              {title: 'ванные комнаты', names: ['ванная комната', 'ванные комнаты', 'ванных комнат'], value: 0, minValue: 0, maxValue: 2}
            ],
            active: true
          })

    .form-elements__column.form-elements__column_shift_right
      .form-elements__item
        +dropdown-list({
          withButtons: true,
          labelText: 'Dropdown',
          inputPlaceholder: 'Сколько гостей',
          inputName: 'guests',
          listItems: [
            {combined: true, title: 'взрослые', names: ['гость', 'гостя', 'гостей'], value: 0, minValue: 0, maxValue: 10},
            {combined: true, title: 'дети', names: ['гость', 'гостя', 'гостей'], value: 0, minValue: 0, maxValue: 10},
            {title: 'младенцы', names: ['младенец', 'младенца', 'младенцев'], value: 0, minValue: 0, maxValue: 10}
          ],
          active: true
        })

    .form-elements__column
      .form-elements__item
        +dropdown-list({
          withButtons: true,
          labelText: 'Dropdown',
          inputPlaceholder: 'Сколько гостей',
          inputName: 'guests',
          listItems: [
            {combined: true, title: 'взрослые', names: ['гость', 'гостя', 'гостей'], value: 2, minValue: 0, maxValue: 10},
            {combined: true, title: 'дети', names: ['гость', 'гостя', 'гостей'], value: 1, minValue: 0, maxValue: 10},
            {title: 'младенцы', names: ['младенец', 'младенца', 'младенцев'], value: 0, minValue: 0, maxValue: 10}
          ],
          active: true
        })

    .form-elements__column
      .form-elements__checkbox-list.form-elements__checkbox-list_width_wide
        +list-checkbox({
          expandable: true,
          listTitle: 'Expandable Checkbox List',
          listItems: [
            {labelText: 'Завтрак'},
            {labelText: 'Письменный стол', addAttributes: {checked: true}},
            {labelText: 'Стул для кормления', addAttributes: {checked: true}},
            {labelText: 'Кроватка', addAttributes: {checked: true}},
          ]
        })
        +list-checkbox({
          expandable: true,
          listTitle: 'Expandable Checkbox List',
          listItems: [
            {labelText: 'Завтрак'},
            {labelText: 'Письменный стол', addAttributes: {checked: true}},
            {labelText: 'Стул для кормления', addAttributes: {checked: true}},
            {labelText: 'Кроватка', addAttributes: {checked: true}},
            {labelText: 'Телевизор'},
            {labelText: 'Шампунь'},
            {labelText: 'Телевизор'},
            {labelText: 'Шампунь'}
          ],
          active: true
        })

    .form-elements__column.form-elements__column_shift_right.form-elements__column_shift_down
      .form-elements__checkbox-list.form-elements__checkbox-list_width_wide
        +list-checkbox({
          listTitle: 'Rich Checkbox Buttons',
          listItems: [
            {
              inputStyle: 'rich',
              labelText: 'Широкий коридор',
              labelDescription: 'Ширина коридоров в номере не менее 91 см.'
            },
            {
              inputStyle: 'rich',
              labelText: 'Помощник для инвалидов',
              labelDescription: 'На 1 этаже вас встретит специалист и проводит до номера.'
            }
          ]
        })

    .form-elements__column.form-elements__column_shift_down
      .form-elements__bullet-list
        h3.form-elements__title Bullet List
        +list-bullet({
          listItems: [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
        })

    .form-elements__column
      .form-elements__item
        +list-feature({
          listItems: [
            {text: 'Комфорт', description: 'Шумопоглощающие стены'},
            {text: 'Удобство', description: 'Окно в каждой из спален'}
          ]
        })

    .form-elements__column.form-elements__column_shift_right.form-elements__column_width_wide
      .form-elements__comment.js-form-elements__comment
        +comment({
          userName: 'Мурад сарафанов',
          userPicture: 'comment-picture-male-1.png',
          date: '5 дней назад',
          likeCount: 12,
          likeActive: true,
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })
